{
  "name": "@dev_fasih/claude-code-router",
  "version": "1.1.0",
  "description": "Use Claude Code without an Anthropics account and route it to another LLM provider",
  "bin": {
    "ccr": "dist/cli.js"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "release": "npm run build && npm publish",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "claude",
    "code",
    "router",
    "llm",
    "anthropic"
  ],
  "author": "dev_fasih",
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "@inquirer/prompts": "^5.0.0",
    "@musistudio/llms": "^1.0.46",
    "dotenv": "^16.4.7",
    "find-process": "^2.0.0",
    "json5": "^2.2.3",
    "lru-cache": "^11.2.2",
    "minimist": "^1.2.8",
    "openurl": "^1.1.1",
    "rotating-file-stream": "^3.2.7",
    "shell-quote": "^1.8.3",
    "tiktoken": "^1.0.21",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.15",
    "@vitest/ui": "^4.0.15",
    "esbuild": "^0.25.1",
    "fastify": "^5.4.0",
    "shx": "^0.4.0",
    "typescript": "^5.8.2",
    "vitest": "^4.0.15"
  },
  "publishConfig": {
    "ignore": [
      "!build/",
      "src/",
      "screenshots/"
    ]
  }
}
